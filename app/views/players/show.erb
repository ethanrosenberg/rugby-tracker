<!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
       <% if Helpers.is_logged_in?(session) %>
      <center><h1 class="display-4">Player Information</h1></center><br>

      <table class="table">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Position</th>
          <th scope="col">Modify</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>

        <tr>
          <th scope="row"><%= @player.id %></th>
          <td><%= @player.name %></td>
          <td><%= @player.position %></td>
          <td><a class="btn btn-primary" href="/players/edit/<%=@player.id%>" role="button">Edit</a>
          </td>
          <td><form method="post" action="/players/delete/<%= @player.id %>">
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-primary"  value="Delete">
            </form></td>
        </tr>

      </tbody>
    </table>
      <% else %>
      <center><p><a class="btn btn-primary btn-lg" href="/sessions/login" role="button">Login</a> <a class="btn btn-primary btn-lg" href="/registrations/signup" role="button">Signup</a></p></center>
      <% end %>

      <p></p>
    </div>
  </div>





    <hr>

  </div> <!-- /container -->
